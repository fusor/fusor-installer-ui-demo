{{#if devMode}}
  {{#if isLoggedIn}}
    {{partial "topbar"}}
  {{/if}}

  {{#if showMainMenu}}
    {{partial "mainmenu"}}
  {{/if}}

{{else}}
  <div class="pull-right">
        <a {{action 'toggleSideMenu'}} class="uxnotes">
        UX Notes &nbsp;<i class="fa fa-bars fa-lg white"></i>
        </a>
  </div>
{{/if}}

{{render 'side-menu'}}

<div {{bind-attr class="isLoggedIn:container"}}>
  {{outlet}}
</div>
<!-- MODALS -->

{{#bs-modal name="myModal" fade=true footerButtonsBinding="myModalButtons" title="My Modal"}}
    <p>Modal content!</p>
{{/bs-modal}}

{{#bs-modal name="newRHCI" fade=true footerButtonsBinding="myModalButtons" title="New RHCI Deployment"}}
  {{render 'new-rhci-modal'}}
{{/bs-modal}}



