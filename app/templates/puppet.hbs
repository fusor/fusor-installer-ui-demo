    {{text-f label='Puppet configuration directory' value=puppet-server-dir help-inline='--puppet-server-dir'}}
    {{text-f label='Use $environment in the modulepath' value=puppet-server-dynamic-environments help-inline='--puppet-server-dynamic-environments'}}
    {{text-f label='What version of enc script to deploy. Valid values are \'v2\' for latest, and \'v1\' for Foreman =< 1.2' value=puppet-server-enc-api help-inline='--puppet-server-enc-api'}}
    {{text-f label='Environments to setup (creates directories). Applies only when $server_dynamic_environments is false' value=puppet-server-environments help-inline='--puppet-server-environments'}}
    {{text-f label='The owner of the environments directory' value=puppet-server-environments-owner help-inline='--puppet-server-environments-owner'}}
    {{text-f label='Directory that holds puppet environments' value=puppet-server-envs-dir help-inline='--puppet-server-envs-dir'}}
    {{text-f label='External nodes classifier executable' value=puppet-server-external-nodes help-inline='--puppet-server-external-nodes'}}
    {{text-f label='Should foreman receive facts from puppet' value=puppet-server-facts help-inline='--puppet-server-facts'}}
    {{text-f label='SSL CA of the Foreman server' value=puppet-server-foreman-ssl-ca help-inline='--puppet-server-foreman-ssl-ca'}}
    {{text-f label='Client certificate for authenticating against Foreman server' value=puppet-server-foreman-ssl-cert help-inline='--puppet-server-foreman-ssl-cert'}}
    {{text-f label='Key for authenticating against Foreman server' value=puppet-server-foreman-ssl-key help-inline='--puppet-server-foreman-ssl-key'}}
