    {{text-f label='Provide puppet CA' value=puppet-server-ca help-inline='--puppet-server-ca'}}
    {{text-f label='The name to use when handling certificates.' value=puppet-server-certname help-inline='--puppet-server-certname'}}
    {{text-f label='Common modules paths (only when $server_git_repo_path and $server_dynamic_environments are false)' value=puppet-server-common-modules-path help-inline='--puppet-server-common-modules-path'}}
