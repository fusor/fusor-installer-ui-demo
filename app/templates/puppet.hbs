    {{text-f label='Puppet var directory' value=puppet-server-puppet-home help-inline='--puppet-server-puppet-home'}}
    {{text-f label='What version of report processor to deploy. Valid values are \'v2\' for latest, and \'v1\' for Foreman =< 1.2' value=puppet-server-report-api help-inline='--puppet-server-report-api'}}
    {{text-f label='List of report types to include on the puppetmaster' value=puppet-server-reports help-inline='--puppet-server-reports'}}
    {{text-f label='If passenger is not used, do we want to fallback to using the puppetmaster service? Set to false if you disabled passenger and you do NOT want to use the puppetmaster service. Defaults to true.' value=puppet-server-service-fallback help-inline='--puppet-server-service-fallback'}}
    {{text-f label='SSL directory' value=puppet-server-ssl-dir help-inline='--puppet-server-ssl-dir'}}
    {{text-f label='Do you use storeconfigs? (note: not required) false if you don\'t, "active_record" for 2.X style db, "puppetdb" for puppetdb' value=puppet-server-storeconfigs-backend help-inline='--puppet-server-storeconfigs-backend'}}
    {{text-f label='Which template should be used for master configuration' value=puppet-server-template help-inline='--puppet-server-template'}}
    {{text-f label='Name of the puppetmaster user.' value=puppet-server-user help-inline='--puppet-server-user'}}
    {{text-f label='Puppet data directory.' value=puppet-server-vardir help-inline='--puppet-server-vardir'}}
    {{text-f label='Show and report changed files with diff output' value=puppet-show-diff help-inline='--puppet-show-diff'}}
    {{text-f label='Switch to enable a random amount of time to sleep before each run.' value=puppet-splay help-inline='--puppet-splay'}}
    {{text-f label='Override the name of the puppet user.' value=puppet-user help-inline='--puppet-user'}}
