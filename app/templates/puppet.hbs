    {{text-f label='Puppet master port' value=puppet-server-port help-inline='--puppet-server-port'}}
    {{text-f label='Which template to use for git post hook' value=puppet-server-post-hook-content help-inline='--puppet-server-post-hook-content'}}
    {{text-f label='Name of a git hook' value=puppet-server-post-hook-name help-inline='--puppet-server-post-hook-name'}}
