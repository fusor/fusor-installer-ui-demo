<div class="row">
  <div class='col-md-9'>
        <form class="form form-horizontal">

<h4>&nbsp;&nbsp;&nbsp;&nbsp;Select Organization or
 {{!bs-button type='success' title="Create New Organization" clicked="showModal" clickedParamBinding="newOrganizationModal"}}
 <button class='btn btn-success' {{action 'showModal' 'newOrganizationModal'}}>Create New Organization</button>
</h4>

<table class="table table-bordered small">
  <thead>
    <tr>
      <th class="col-md-1"></th>
      <th class="col-md-4"> Organization </th>
      <th class="col-md-4"> Description </th>
    </tr>
  </thead>

  <tbody>
  {{#each org in organizations itemController="organization"}}
    {{tr-organization org=org selectedOrganzation=selectedOrganzation}}
  {{/each}}
  </tbody>
</table>

        <br />
        <br />
<h4>&nbsp;&nbsp;&nbsp;&nbsp;Select Lifecycle Environment or
 <button class='btn btn-success' {{action 'showModal' 'newEnvironmentModal'}}>Create New Environment</button>
</h4>

      <table class="table">
        <tbody>
          <tr>
            <td class="path-selector">
              <ul class="path-list">
               {{#each env in environments itemController="environment"}}
                <li class="path-list-item list_item_active">
                  <label class='env_path_active'>
                      {{env.name}}
                  </label>
                </li>
                {{/each}}
                <li class="path-list-item">
                  <label class="path-list-item-label">
                    <i class="icon-plus">+</i>
                  </label>
                </li>
              </ul>
          </td>
        </tr>
       </tbody>
     </table>

         {{!#select-f label='Environment'
                    content=environments
                    optionLabelPath="content.name"
                    optionValuePath="content.id"
                    value=selectedEnvironment.id
                    selection=selectedEnvironment
                    prompt="Select Existing Environment"
                    labelSize='col-md-4' inputSize='col-md-8'
                    }}

         {{!/select-f}}


         <br />
         <br />
          <div style='float:right'>
              {{#link-to 'satellite' class='btn btn-default'}}Back{{/link-to}}
              {{#link-to 'satellite.subscriptions' class='btn btn-primary'}}Next{{/link-to}}
          </div>

        </form>
  </div>


</div>


{{#bs-modal name="newOrganizationModal" fade=true footerButtonsBinding="rhciModalButtons" title="Create New Organization"}}
  {{partial 'new-organization'}}
{{/bs-modal}}

{{#bs-modal name="newEnvironmentModal" fade=true footerButtonsBinding="rhciModalButtons" title="Create New Environment"}}
  {{render 'configure/new-environment'}}
{{/bs-modal}}