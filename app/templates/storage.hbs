<div class='col-md-12'>
    <br />
    <form class="form form-horizontal">

      {{#base-f label="Storage Type"}}
        {{radio-button label="NFS" checked=storageType value="NFS"}}NFS
        &nbsp;&nbsp;&nbsp;&nbsp;
        {{radio-button label="Gluster" checked=storageType value="Gluster"}}Gluster
      {{/base-f}}


      {{#if isNFS}}
      {{text-f label="Local ISO domain path" value='/var/lib/exports/iso'}}

      {{text-f label="Local ISO domain ACL" value='3980292e1905(rw)' help-inline='note that the default will restrict access to 3980292e1905 only, for security reasons'}}

      {{text-f label="Local ISO domain name" value='ISO_DOMAIN'}}
      {{else}}
        <h3>Gluster TODO</h3>
      {{/if}}
      <div style='float:right'>
        <button {{action 'goNext'}} class='btn btn-primary btn-sm'>Next</button>
      </div>
    </form>
    <br />
    <br />
</div>